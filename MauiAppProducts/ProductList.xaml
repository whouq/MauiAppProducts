<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.ProductList" BackgroundColor="LightSalmon"
             Title="ProductList">

        <Grid RowDefinitions="Auto,Auto,*">
        <Frame Grid.Row="0" Margin="10" HasShadow="True" BackgroundColor="LightSalmon">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                <Label Text="Продукты" TextColor="White" FontSize="20" FontAttributes="Bold"> </Label>
            </StackLayout>
        </Frame>
        <Button Grid.Row="1" Text="Добавить" Clicked="AddProduct_click" Background="LightCoral" TextColor="White" Margin="0,10,140,0" HorizontalOptions="Center"/>
        <Button Grid.Row="1" Text="Редактировать" Clicked="EditProduct_click" Background="LightCoral" TextColor="White" Margin="100,10,0,0" HorizontalOptions="Center"/>
        <Button Grid.Row="1" Text="Удалить" Clicked="DeleteProduct_click" Background="LightCoral" TextColor="White" Margin="0,10,0,0" HorizontalOptions="End"/>
        <Button Grid.Row="1" Text="К категориям" Clicked="Back_click" Background="LightCoral" TextColor="White" Margin="0,10,0,0" HorizontalOptions="Start"/>
        <ListView x:Name="ListViewProduct" Grid.Row="2" HasUnevenRows="True" SelectionMode="None" BackgroundColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Border Margin="10,5" BackgroundColor="White" >
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="15">
                                <StackLayout Grid.Column="1" Margin="10,0" Spacing="5">
                                    <Label Text="{Binding Name}" FontSize="15" FontAttributes="Bold" TextColor="White"></Label>
                                    <Label Text="{Binding Description} " FontSize="15" TextColor="Gray"></Label>
                                    <StackLayout Orientation="Horizontal" Spacing="15">
                                        <Label Text="{Binding Price,StringFormat='{0:C}'}" FontSize="14" FontAttributes="Bold" TextColor="Gray"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </Grid>
                            </Border>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        
       
      
  
    </Grid>
</ContentPage>