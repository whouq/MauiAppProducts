<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.ProductSnaks"
             Title="ProductSnaks" Background="LightSalmon">
    <Grid RowDefinitions="Auto,Auto,*">
        <Frame Grid.Row="0" Margin="10" HasShadow="True" BackgroundColor="LightSalmon">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                <Label Text="Снеки" TextColor="White" FontSize="20" FontAttributes="Bold"></Label>
            </StackLayout>
        </Frame>
        <Button Text="Добавить" Clicked="AddProduct_click" Background="LightCoral" TextColor="White" Margin="0,10,0,0"/>
        <ListView x:Name="ListViewProduct" Grid.Row="2" HasUnevenRows="True" SelectionMode="None" IsVisible="False" BackgroundColor="Transparent">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="10,5" BackgroundColor="White" HasShadow="True" BorderColor="Black">
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="15">
                                <StackLayout Grid.Column="1" Margin="10,0" Spacing="5">
                                    <Label Text="{Binding Name}" FontSize="15" FontAttributes="Bold" TextColor="White"></Label>
                                    <Label Text="{Binding Description} " FontSize="15" TextColor="Gray"></Label>
                                    <StackLayout Orientation="Horizontal" Spacing="15">
                                        <Label Text="{Binding Price,StringFormat='{0:C}'}" FontSize="14" FontAttributes="Bold" TextColor="Gray"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>


        <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Start" >

            <Label Text="Снеки" FontSize="30" TextColor="White" FontAttributes="Bold" VerticalTextAlignment="Start" />
            <Label Text="" />
        </StackLayout>

    </Grid>
</ContentPage>