<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.MainPage" BackgroundColor="LightSalmon">


        <ScrollView HorizontalOptions="Center">

            <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" >
                <Label Text="Продукты" FontSize="30" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0, 30"/>


            <Button Padding="0" CornerRadius="15" WidthRequest="180" HeightRequest="140" Text="Мясо" FontSize="30" TextColor="LightSalmon" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Meet_Click">
               
            </Button>

            <Button Padding="0" Margin="0,10,0,0"  CornerRadius="15" WidthRequest="180" HeightRequest="140" Text="Молочные продукты" FontSize="30" TextColor="LightSalmon" BackgroundColor="White"  HorizontalOptions="Center" VerticalOptions="Center" Clicked="Milk_Click">
          
            </Button>

            <Button  Padding="0" Margin="0,10,0,0"  CornerRadius="15" WidthRequest="180" HeightRequest="140" Text="Овощи/Фрукты" FontSize="20" TextColor="LightSalmon" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Vegetable_Click">
              
            </Button>

            <Button  Padding="0" Margin="0,10,0,0"  CornerRadius="15" WidthRequest="180" HeightRequest="140"  Text="Снеки" FontSize="30" VerticalOptions="Center" BackgroundColor="White" HorizontalOptions="Center" TextColor="LightSalmon" Clicked="Snacks_Click" >
         
            </Button>
                
           

            </StackLayout>
        </ScrollView>


</ContentPage>
