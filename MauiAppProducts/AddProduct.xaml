<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppProducts.AddProduct"
             Title="AddProduct" Background="LightSalmon">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <Frame BackgroundColor="LightCoral" Padding="15" HasShadow="True">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                    <Label Text="{Binding Category.Title}" TextColor="White" FontSize="18" FontAttributes="Bold"></Label>
                </StackLayout>
            </Frame>
       
        <Frame BackgroundColor="White" Padding="15" HasShadow="True">
            <StackLayout Spacing="8">
                <Label Text="Название продукта" TextColor="Black" FontSize="18" FontAttributes="Bold"/>

            <Entry Text="{Binding Name}" Placeholder="Введите название продукта" Background="White" HeightRequest="45"/>

            </StackLayout>
        </Frame>
        <Frame BackgroundColor="White" Padding="15" HasShadow="True">
            <StackLayout Spacing="8">
                <Label Text="Описание" FontSize="14" FontAttributes="Bold" TextColor="Black"></Label>
                <Editor Text="{Binding Description}" Placeholder="Опишите продукт" HeightRequest="80" AutoSize="TextChanges"/>
            </StackLayout>
        </Frame>
        <Frame BackgroundColor="White" Padding="15" HasShadow="True">
            <StackLayout Spacing="6">
                <Label Text="Цена" FontSize="14" FontAttributes="Bold" TextColor="Black"/>
                <Entry Text="{Binding Price}" Keyboard="Numeric" Placeholder="0.00" Background="Snow" HeightRequest="45"/>
            </StackLayout>
        </Frame>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Text="Сохранить" Clicked="Save_click" BackgroundColor="LightCoral" TextColor="White" HeightRequest="50" CornerRadius="10" Grid.Column="0"/>
                <Button Text="Закрыть" Clicked="Close_click" BackgroundColor="LightCoral" TextColor="White" HeightRequest="50" CornerRadius="10" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ScrollView>
        
</ContentPage>